# ls Aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# General QoL Aliases
alias btw='neofetch'
alias hrg='history | rg'
alias refresh='clear && source $HOME/.bashrc'

# Git Aliases
alias g="git"
alias gs='git status'
alias ga='git add'
alias gp='git push'
alias gu='git pull'
alias gc='git commit'
alias go='git checkout'
alias gd='git diff'
alias gl='git log'

# Python Aliases
alias py='python3'

# NVim Aliases
alias v='nvim'
alias vn='nvim +Note'  # Open the current daily note (dep: note.vim plugin)
